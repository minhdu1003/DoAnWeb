@model WebPashion.Models.PRODUCT

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Quản lý Size</h4>

                    </div>
                    <div class="modal-content">
                        <div style="margin-bottom:30px;" class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Sửa thông tin sản phẩm</h5>
                        </div>
                        @using (Html.BeginForm("Edit", "PRODUCTs", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ID)
                                <div style="display:inline-flex">
                                    <div>
                                        <div style="display:inline-flex" class="form-group">
                                            <span style="margin-left:150px" class="input-group-text">Tên sản phẩm:</span>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div style="display:inline-flex" class="form-group">
                                            <span style="margin-left:228px" class="input-group-text">Giá:</span>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.ProductPrice, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.ProductPrice, "", new { @class = "text-danger" })
                                            </div>
                                            <span class="input-group-text">VND</span>
                                        </div>
                                        <br />
                                        <div style="display:inline-flex" class="form-group">
                                            <span style="margin-left:228px" class="input-group-text">Số lượng:</span>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.ProductCount, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.ProductCount, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div style="display:inline-flex" class="form-group">
                                            <span style="margin-left:228px" class="input-group-text">Kích thước:</span>
                                            <div class="col-md-10">
                                                @Html.DropDownList("Size", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div style="display:inline-flex" class="form-group">
                                            <span style="margin-left:228px" class="input-group-text">Loại sản phẩm:</span>
                                            <div class="col-md-10">
                                                @Html.DropDownList("Type", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div style="display:inline-flex" class="form-group">
                                            <span style="margin-left:228px" class="input-group-text">Thương hiệu:</span>
                                            <div class="col-md-10">
                                                @Html.DropDownList("Brand", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div style="display:inline-flex" class="form-group">
                                            <span style="margin-left:228px" class="input-group-text">Khuyến mãi:</span>
                                            <div class="col-md-10">
                                                @Html.DropDownList("Sale", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Sale, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div style="display:inline-flex" class="form-group">
                                            <span style="margin-left:228px" class="input-group-text">Ghi chú:</span>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div style="display:inline-flex" class="form-group">
                                            <span style="margin-left:228px" class="input-group-text">Ngày tạo:</span>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.ProductCreatedDate, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.ProductCreatedDate, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <div style="display:inline-flex; " class="form-group">
                                            <span style="margin-left:228px" class="input-group-text">Ảnh:</span>
                                            <div class="col-md-10">

                                                <div style="margin-top: 30px; display:inline-flex ">
                                                    <div><img style="width:300px" src="~/Content/images/IMG/@Model.ProductImage" id="previewImage" /></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div style="padding-left:365px">
                                            <input type="file" name="ImageUpload" onchange="ShowImagePreview(this, document.getElementById('previewImage'))" required />
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div style="margin:20px 0px 20px 500px" class="form-actions no-color">
                                    <input type="submit" value="Lưu" class="btn btn-primary" />
                                    <a style="margin-left:50px;" href="@Url.Action("GetProduct","Admin")">
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">Trở về</button>
                                    </a>
                                </div>
                            </div>
                        }
                        <div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



