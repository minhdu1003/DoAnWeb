@model WebPashion.Models.CUSTOMER

@{
    ViewBag.Title = "DeleteCustomer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Quản lý thông tin khách hàng</h4>

                    </div>
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 style="display:inline-flex;margin-left:350px;margin-top:50px" class="modal-title" id="exampleModalLongTitle">Bạn có chắc muốn xóa thông tin khách hàng&#160;<p style="font-weight:bold">@Model.CustomerName</p>&#160;không !</h5>
                        </div>
                        @*  *@
                        <div>


                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div style="margin:20px 0px 20px 500px" class="form-actions no-color">
                                    <input type="submit" value="Xóa" class="btn btn-primary" />
                                    <a style="margin-left:50px;" href="@Url.Action("GetCustomer","Admin")">

                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">Trở về</button>

                                    </a>
                                </div>
                            }
                        </div>
                        @*  *@
                        <div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
