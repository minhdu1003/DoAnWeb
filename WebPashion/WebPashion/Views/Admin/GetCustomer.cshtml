@using WebPashion.Models
@model List<WebPashion.Models.CUSTOMER>
@{
    ViewBag.Title = "getCustomers";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Quản lý khách hàng</h4>

                    </div>
                    <div class="card-body">
                        <div style="display:inline-flex">
                            <div></div>
                            <form style="margin-left:900px" class="navbar-form">
                                <div class="input-group no-border">
                                    <input id="txtSearch" type="text" value="" class="form-control" placeholder="Search">
                                    <button type="submit" class="btn btn-white btn-round btn-just-icon">
                                        <i class="material-icons">search</i>
                                        <div class="ripple-container"></div>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="table-responsive">
                            <table class="table">
                                <thead style="text-align:center" class=" text-primary">
                                <th>
                                    ID
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Sex
                                </th>
                                <th>
                                    Address
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Phone
                                </th>
                                <th>
                                    Username
                                </th>
                                <th>
                                    Password
                                </th>
                                <th>
                                </th>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count(); i++)
                                    {
                                        <tr style="text-align:center;">

                                            <td>
                                                @Model[i].CustomerID

                                            </td>
                                            <td>
                                                @Model[i].CustomerName
                                            </td>
                                            <td>
                                                @Model[i].CustomerSex
                                            </td>
                                            <td>
                                                @Model[i].CustomerAddress
                                            </td>
                                            <td>
                                                @Model[i].CustomerEmail
                                            </td>
                                            <td>
                                                @Model[i].CustomerPhone
                                            </td>
                                            <td>
                                                @Model[i].Username
                                            </td>
                                            <td>
                                                @Model[i].Password
                                            </td>
                                            <td>
                                                <a href="@Url.Action("DeleteCustomer","Admin",new {id = Model[i].CustomerID })"><img style="width:20px" src="~/Content/images/IMG/cancel.png" /></a>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                                <tr>

                                    @* // *@
                                </tr>
                            </table>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



