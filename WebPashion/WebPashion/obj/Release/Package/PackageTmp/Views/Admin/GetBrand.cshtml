@using WebPashion.Models
@model List<WebPashion.Models.PRODUCT_BRAND>
@{
    ViewBag.Title = "GetSize";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Quản lý thương hiệu</h4>

                    </div>
                    <div class="card-body">
                        <a href="@Url.Action("AddBrand","Admin")">

                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">+ Thêm mới</button>

                        </a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead style="text-align:center" class=" text-primary">
                                <th>
                                    Mã thương hiệu
                                </th>
                                <th>
                                    Tên thương hiệu
                                </th>
                                <th>
                                </th>
                                <th>
                                </th>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count(); i++)
                                    {
                                        <tr style="text-align:center;">

                                            <td>
                                                @Model[i].Brand

                                            </td>
                                            <td>
                                                @Model[i].BrandName
                                            </td>
                                            <td>
                                                <a href="@Url.Action("EditBrand", new {id = Model[i].Brand })"> <img style="width:20px" src="~/Content/images/IMG/pencil.png" /></a>
                                            </td>
                                            <td>
                                
                                                <a href="@Url.Action("DeleteBrand", new {id = Model[i].Brand })"><span><img style="width:20px" src="~/Content/images/IMG/cancel.png" /></span></a>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                    
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


