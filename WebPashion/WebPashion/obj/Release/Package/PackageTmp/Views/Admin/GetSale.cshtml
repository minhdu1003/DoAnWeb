@using WebPashion.Models
@model List<WebPashion.Models.PRODUCT_SALE>
@{
    ViewBag.Title = "GetSize";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Quản lý khuyến mãi</h4>

                    </div>
                    <div class="card-body">
                        <a href="@Url.Action("AddSale","Admin")">

                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">+ Thêm mới</button>

                        </a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead style="text-align:center" class=" text-primary">
                                <th>
                                    Mã Sale
                                </th>
                                <th>
                                    Sale
                                </th>
                                <th>
                                </th>
                                <th>
                                </th>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count(); i++)
                                    {
                                        <tr style="text-align:center;">

                                            <td>
                                                @Model[i].Sale

                                            </td>
                                            <td>
                                                @Model[i].SaleName
                                            </td>
                                            <td>
                                                <a href="@Url.Action("EditSale","Admin", new { id = Model[i].Sale })"> <img style="width:20px" src="~/Content/images/IMG/pencil.png" /></a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("DeleteSale","Admin", new { id = Model[i].Sale })"><img style="width:20px" src="~/Content/images/IMG/cancel.png" /></a>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                                <tr>
                                    @*<input type="button" value="Create User" onclick="" class="btn btn-primary pull-left" />*@

                                    @*<input class="btn btn--blue" type="submit" value="SUBMIT" name="SUBMIT">
                    <button type="submit" class="btn btn-primary pull-right">Create</button>*@

                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


